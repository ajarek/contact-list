<%-include('./partials/header')%>
<%-include('./partials/navbar')%>
<div class="container-fluid d-flex flex-wrap justify-content-evenly align-items-center  ">
  <% contacts.forEach(contact=>{%>
  <div class="card text-white  mb-3  shadow  mb-5  " style="min-width:18rem;background: #fffd80;">
    <div class="card-header text-dark" style="background:#ffd166 ;">
      <h4><i class="far fa-user me-2"></i><%=contact.name%></h4>
    </div>
    <div class="card-body d-flex flex-column  text-dark pagination-sm">
      <a href="mailto:ajarek@poczta.onet.pl" class="page-link text-decoration-none text-dark mb-1 "><i
          class="far fa-envelope mx-1"></i><%=contact.email%></a>
      <a href="tel:+48573219230" class="page-link text-decoration-none text-dark mb-1"><i
          class="fas fa-mobile-alt mx-1"></i><%=contact.phone%></a>
      <p class="card-text"><i class="fas fa-birthday-cake mx-1"></i><%=contact.brithday%></p>
      <div class="d-flex justify-content-between">
        <a href="/edit/<%=contact._id%>" class="btn btn-outline-primary ">edit</a><a href="/delete/<%=contact._id%>" class="btn btn-outline-danger">delete</a>
      </div>
    </div>
  </div>
  <%})%>
</div>
<%-include('./partials/footer')%>